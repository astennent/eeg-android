<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center" >

        <Button
            android:id="@+id/happyButton"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/happy" />

        <Button
            android:id="@+id/sadButton"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sad" />
        
        <Button
            android:id="@+id/angryButton"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/angry" />
        
        <Button
            android:id="@+id/anxiousButton"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/anxious" />
        
        <Button
            android:id="@+id/excitedButton"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/excited" />
        
        <Button
            android:id="@+id/painButton"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pain" />
</LinearLayout>